@model WebApplication1.Models.AppUser


<div class="row">
    <div class="col-md-6">
        <form asp-action="MoveUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ManagingCompanyId" class="control-label"></label>
                <select asp-for="ManagingCompanyId" class="form-control" asp-items="ViewBag.Companies"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" /> |
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
