@model WebApplication1.Models.Reservation
@{
        ViewData["Title"] = "Cancel Reservation";
}


<h2>Are you sure you want to cancel your reservation? </h2>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Flight.Organizer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Flight.Organizer.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Flight)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Flight.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Flight.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Flight.Date)
        </dd>
        <dt class="col-sm-2">
            Flight No
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Flight.FlightNo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Seats)
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in Model.Seats)
            {
                @Html.DisplayFor(modelItem => item.Col) @Html.DisplayFor(modelItem => item.Row)
            }
        </dd> 
    </dl>
</div>



<form asp-action="Cancel_Reservation">

    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Cancel Reservation" class="btn btn-danger" /> |
    <a asp-action="Index">Go back to Profile Page</a>
</form>