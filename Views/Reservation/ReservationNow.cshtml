@model WebApplication1.Models.Reservation

@{
    ViewData["Title"] = "ReservationNow";
}

<h1>Reservation</h1>

<h4>Are you sure want to reserve this flight?</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ReservationNow"  enctype="multipart/form-data">
         
            
            <div class="form-group">
                <input type="submit" asp-action="Index" value="Reservation" asp-controller="Events" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a input type="submit" asp-action="Index" asp-controller="Events">Back to Flight Page</a>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
