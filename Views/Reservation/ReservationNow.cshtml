@model WebApplication1.Models.Event

@{
    ViewData["Title"] = "ReservationNow";
}

<h1>Reservation Page</h1>

<h4>Reserve ticket now?</h4>
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Organizer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Organizer.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FlightNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FlightNo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>




    </dl>
</div>

<button onclick="myFunction()" class="btn btn-info">Extra Info </button>
<div id="myDIV" style="display: none">

    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RefundTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RefundTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RefundPortion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RefundPortion)
        </dd>
    </dl>

</div>
<hr />
<p style="color:crimson"> @ViewData["Err"]</p>
<form asp-action="ReservationNow">
    <div class="form-group">
        <label id="type" class="control-label"> Class :  </label>
        @Html.DropDownList("type", new List<SelectListItem>() { new SelectListItem { Text = "Economy", Value = "2" }, new SelectListItem { Text = "Business", Value = "1" } })
    </div>
    <div class="form-group">
        <label for="countOfSeats" class="control-label"> Number of tickets: </label>
        <input type="number" id="countOfSeats" name="countOfSeats" value="1" min="1" />
    </div>
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Confirm" class="btn btn-success" /> |
    <a asp-action="Index" asp-controller="Events">Back to List</a>
</form>


<script>
    function myFunction() {
        var x = document.getElementById("myDIV");
        if (x.style.display === "none") {
            x.style.display = "block";
        } else {
            x.style.display = "none";
        }
    }
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
