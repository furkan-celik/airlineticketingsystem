@model WebApplication1.Models.Offer

@{
    ViewData["Title"] = "CreateForEvent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 style="color:lightgrey">Create Offer For Event</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateForEvent">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.HiddenFor(model => model.FlightId)
            </div>
            <div class="form-group">
                <label asp-for="FlightId" class="control-label">Flight No @Html.TextBox("Flight No", @ViewData["flightno"], new { @class = "flight no", @readonly = "readonly" })</label>
                <br />
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Name: "Write 'Business' and 'Economy' for classes, it is case sensitive"</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label">Type: "0 means class, 1 means other offers"</label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" /> |
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
