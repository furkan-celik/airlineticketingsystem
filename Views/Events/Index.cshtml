@if (User.IsInRole("WebAdmin") || User.IsInRole("CompAdmin"))
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RefundTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ResCancelTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RefundPortion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FlightNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Organizer)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RefundTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ResCancelTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RefundPortion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FlightNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Organizer.Description)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        @if ((await AuthorizationService.AuthorizeAsync(User, "ReqAdmin")).Succeeded)
                        {
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

}

@if (User.IsInRole("User"))
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Organizer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
