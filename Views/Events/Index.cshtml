                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FlightNo)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Organizer.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FlightNo)
                    </td>

                    <td>
                        <a asp-action="Buy" asp-route-id="@item.Id">Buy Ticket</a> |
                        <a asp-action="ReservationNow" asp-route-id="@item.Id" asp-controller="Reservation">Reservation Now</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>


}