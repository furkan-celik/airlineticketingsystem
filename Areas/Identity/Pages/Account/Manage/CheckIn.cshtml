@page
@model CheckInModel
@{
    ViewData["Title"] = "Check-In";
    ViewData["ActivePage"] = ManageNavPages.CheckIn;
}

@if (User.IsInRole("WebAdmin") || User.IsInRole("CompAdmin"))
{
    <style>

        .textcolor {
            color: lightgrey;
        }
    </style>
}
else
{
    <style>

        .textcolor {
            color: black;
        }
    </style>
}

<h3 class="textcolor">@ViewData["Title"]</h3>
<h5 class="textcolor">Flights that available for check in.</h5>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.tickets[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tickets[0].Flight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tickets[0].Flight.Date)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.tickets[0].Event.FlightNo)*@Flight No
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tickets[0].Seats)
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.tickets)
        {
        <tr>
            <td class="textcolor">
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td class="textcolor">
                @Html.DisplayFor(modelItem => item.Flight.Name)
            </td>
            <td class="textcolor">
                @Html.DisplayFor(modelItem => item.Flight.Date)
            </td>
            <td class="textcolor">
                @Html.DisplayFor(modelItem => item.Flight.RouteId)
            </td>
            <td class="textcolor">
                @foreach (var item2 in item.Seats)
                {
                    @Html.DisplayFor(modelItem => item2.Col) @Html.DisplayFor(modelItem => item2.Row)
                }
            </td>
            <td class="textcolor">

                <a asp-action="CheckIn" asp-route-id="@item.Id " asp-controller="CheckIn">Check-in</a>
            </td>
        </tr>
        }
    </tbody>
</table>