@page
@model TicketModel
@{
    ViewData["Title"] = "Tickets";
    ViewData["ActivePage"] = ManageNavPages.Tickets;
}

<h3 style="color:lightgrey">@ViewData["Title"]</h3>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.tickets[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tickets[0].Flight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tickets[0].Flight.Date)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.tickets[0].Event.FlightNo)*@Flight No
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tickets[0].Seats)
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.tickets)
        {
        <tr>
            <td style="color:lightgrey">
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td style="color:lightgrey">
                @Html.DisplayFor(modelItem => item.Flight.Name)
            </td>
            <td style="color:lightgrey">
                @Html.DisplayFor(modelItem => item.Flight.Date)
            </td>
            <td style="color:lightgrey">
                @Html.DisplayFor(modelItem => item.Flight.RouteId)
            </td>
            <td style="color:lightgrey">
                @foreach (var item2 in item.Seats)
                {
                    @Html.DisplayFor(modelItem => item2.Col) @Html.DisplayFor(modelItem => item2.Row)
                }
            </td>
           


        </tr>
        }
    </tbody>
</table>
